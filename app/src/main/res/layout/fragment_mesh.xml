<?xml version="1.0" encoding="utf-8"?>
<layout>
    <data>
        <variable
            name="MeshFragment"
            type="com.silvertak.meshsampleapplication.ui.mesh.MeshFragment" />
    </data>
    <LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
        xmlns:app="http://schemas.android.com/apk/res-auto"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2">
            <com.silvertak.meshsampleapplication.ui.customview.ClickSwitchColorTextView
                android:id="@+id/prepareMeshButton"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:text="@string/mesh_prepare"
                android:textColor="@color/white"
                android:gravity="center"
                app:normalBackgroundColor="@drawable/prepare_btn_radius_background"
                app:clickedBackgroundColor="@drawable/prepare_btn_click_radius_background"
                android:onClick="@{MeshFragment::onClick}"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">
            <com.silvertak.meshsampleapplication.ui.customview.ClickSwitchColorTextView
                android:id="@+id/meshOnButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:text="@string/relay_on"
                android:textColor="@color/white"
                android:gravity="center"
                app:normalBackgroundColor="@drawable/on_btn_radius_background"
                app:clickedBackgroundColor="@drawable/on_btn_click_radius_background"
                android:onClick="@{MeshFragment::onClick}"/>
            <com.silvertak.meshsampleapplication.ui.customview.ClickSwitchColorTextView
                android:id="@+id/meshOffButton"
                android:layout_weight="1"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:text="@string/relay_off"
                android:textColor="@color/white"
                android:gravity="center"
                app:normalBackgroundColor="@drawable/off_btn_radius_background"
                app:clickedBackgroundColor="@drawable/off_btn_click_radius_background"
                android:onClick="@{MeshFragment::onClick}"/>
        </LinearLayout>
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:weightSum="2"
            android:layout_marginTop="10dp">
            <com.silvertak.meshsampleapplication.ui.customview.ClickSwitchColorTextView
                android:id="@+id/relayButton"
                android:layout_weight="2"
                android:layout_width="0dp"
                android:layout_height="80dp"
                android:layout_margin="10dp"
                android:text="@string/relay_loop"
                android:textColor="@color/white"
                android:gravity="center"
                app:normalBackgroundColor="@drawable/loop_btn_radius_background"
                app:clickedBackgroundColor="@drawable/loop_btn_click_radius_background"
                android:onClick="@{MeshFragment::onClick}"/>
        </LinearLayout>
    </LinearLayout>
</layout>
